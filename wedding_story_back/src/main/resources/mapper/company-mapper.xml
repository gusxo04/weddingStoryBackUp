<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.co.iei.company.model.dao.CompanyDao">

  
  
  <insert id="insertCompany">
  	insert into company values(#{companyNo},#{companyCategory},#{companyName},#{companyTel},#{companyAddr},#{companyInfo},#{companyThumb},#{startTime},#{endTime},sysdate,#{dayOff},0)
  </insert>

	<insert id="insertKeyWord">
		insert into company_keyword values(#{companyNo},#{keyWord})
	</insert>
	
	<select id="adminTotalCount" resultType="int">
		select count(*) from company
	</select>
	
	<select id="getCompanyList" resultType="company">
		select * from
			(select rownum as rnum, m.* from
				(select
					company_no,
					company_category,
					company_name,
					company_tel,
					company_addr,
					company_info,
					company_thumb,
					start_time,
					end_time,
					company_enroll_date,
					day_off,
					company_report	
				from company order by company_name)m)
		where rnum between #{start} and #{end}
	</select>
</mapper>
